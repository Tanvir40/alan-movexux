{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
  "src/app/**/*",
  "**/*.ts",
  "**/*.tsx",
  "next-env.d.ts",
  ".next/types/**/*.ts",
  "tailwind.config.js",
  "src/app/services/**/*",
  "src/lib/**/*",
  "src/components/**/*"
],
"exclude": [
  "node_modules"
]
}